<h2>Kayıt Ol</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="row">
		<div class="form-group">
			<label for="inputEmail" class="col-md-2 control-label" > Email </label>
			<div class="col-md-5">
				<%= f.input :email, required: false, autofocus: true, label:false, class: "input-email" %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="form-group">
			<label for="inputPassword" class="col-md-2 control-label" > Parola </label>
			<div class="col-md-5">
				<%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum"  if @minimum_password_length),  label:false%>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="form-group">
			
			<label class="col-md-2 control-label" > Tekrar Parola </label>
			<div class="col-md-5 ">
					<%= f.input :password_confirmation, required: true, label:false %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="form-group">
			<div class="col-md-5 col-md-offset-2">
				<div class="actions">
					<%= f.submit "Giriş", :class=>"btn btn-primary" %>
				</div>
			</div>
		</div>
	</div>

<% end %>


<%= render "devise/shared/links" %>
