
<div class="container col-md-12">

	<h2>Giriş</h2>

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

	<div class="row">
		<div class="form-group">
			<label for="inputEmail" class="col-md-2 control-label" > Email </label>
			<div class="col-md-5">
				<%= f.input :email, required: false, label:false %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="form-group">
			<label for="inputPassword" class="col-md-2 control-label" > Parola </label>
			<div class="col-md-5">
				<%= f.input :password, required: false, label:false %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="form-group">
			<div class="col-md-5 col-md-offset-2">
				<div class="checkbox">
					<label>
						<%= f.check_box :remember_me, :class=> "checkbox", :value =>true %> Beni Hatırla
					</label>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="form-group">
			<div class="col-md-5 col-md-offset-2">
				<div class="actions">
					<%= f.submit "Giriş", :class=>"btn btn-primary" %>
				</div>
			</div>
		</div>
	</div>


	
	<% end %>

	<%= render "devise/shared/links" %>
</div>