<ul class="list-group">
	<h1 class="text-danger">Dokumanlar</h1>
	<% if admin_signed_in? %>
	<%= link_to " Döküman Ekle", new_lesson_document_path, class: "label label-primary" %> <br>
	<% end %>
	<% @documents.each do |document| %>
		<li class="list-group-item">
		<%= document.name %> - <%= truncate(document.description,length: 30) %> 
		<% if admin_signed_in? %>
			<% if document.alan == nil %>
				<%= link_to "yukle", edit_lesson_document_path(document.lesson,document), class: "label label-primary" %> <br>
			<% else %>
				<%= link_to "Güncelle", edit_lesson_document_path(document.lesson,document), class: "label label-primary" %> 
				<%= link_to "Sil", lesson_document_path(document.lesson,document), method: :delete, class: "label label-warning" %>
			<% end %>
		<% end %>
		<% if document.alan.present? %>
			<%= link_to document.alan.file.identifier, downlaod_lesson_document_path(id: document.id)%>
		<% end %>
	</li>
	<% end %>
</ul>
